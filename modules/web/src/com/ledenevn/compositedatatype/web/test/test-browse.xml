<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="com.ledenevn.compositedatatype.web.test.TestBrowse"
        focusComponent="table"
        lookupComponent="table"
        messagesPack="com.ledenevn.compositedatatype.web.test">
    <dsContext>
        <datasource id="testDs"
                    class="com.ledenevn.compositedatatype.entity.Test"/>
        <groupDatasource id="testsDs"
                         class="com.ledenevn.compositedatatype.entity.Test"
                         view="_local">
            <query>
                <![CDATA[select e from compositedatatype$Test e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <actions>
        <action id="save"
                caption="mainMsg://actions.Ok"
                icon="icons/ok.png"
                invoke="save"
                shortcut="CTRL-ENTER"/>
        <action id="cancel"
                caption="mainMsg://actions.Cancel"
                description="Esc"
                icon="icons/cancel.png"
                invoke="cancel"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout>
        <split id="split"
               height="100%"
               orientation="horizontal"
               reversePosition="true"
               width="100%">
            <vbox id="lookupBox"
                  expand="table"
                  height="100%"
                  margin="false,true,false,false"
                  spacing="true">
                <filter id="filter"
                        applyTo="table"
                        datasource="testsDs">
                    <properties include=".*"/>
                </filter>
                <groupTable id="table"
                            width="100%">
                    <actions>
                        <action id="create"/>
                        <action id="edit"/>
                        <action id="remove"/>
                    </actions>
                    <columns>
                        <column id="name"/>
                        <column id="comment"/>
                    </columns>
                    <rows datasource="testsDs"/>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn"
                                action="table.create"/>
                        <button id="editBtn"
                                action="table.edit"/>
                        <button id="removeBtn"
                                action="table.remove"/>
                    </buttonsPanel>
                </groupTable>
            </vbox>
            <vbox id="editBox"
                  expand="fieldGroupBox"
                  height="100%"
                  margin="false,false,false,true"
                  spacing="true">
                <scrollBox id="fieldGroupBox">
                    <fieldGroup id="fieldGroup"
                                datasource="testDs">
                        <column width="250px">
                            <field property="name"/>
                            <field property="comment"
                                   rows="5"/>
                            <field property="cd"/>
                        </column>
                    </fieldGroup>
                </scrollBox>
                <textArea id="textArea"
                          height="319px"
                          width="385px"/>
                <button id="acCreateContainer"
                        caption="msg://tdAdd"
                        description="msg://tdAdd"
                        invoke="onAcCreateContainerClick"/>
                <button id="acReadContainer"
                        caption="msg://txReadContainer"
                        invoke="onAcReadContainerClick"/>
                <hbox id="actionsPane"
                      spacing="true"
                      visible="false">
                    <button id="saveBtn"
                            action="save"/>
                    <button id="cancelBtn"
                            action="cancel"/>
                </hbox>
            </vbox>
        </split>
    </layout>
</window>
